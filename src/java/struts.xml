<!DOCTYPE struts PUBLIC '-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN' 'http://struts.apache.org/dtds/struts-2.1.7.dtd'>
<struts>
    <constant name="struts.custom.i18n.resources" value="mess"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.action.extension" value="do" />
    <package name="defaultAction" extends="struts-default">
	<global-results>
	    <result name="alert">/alert.jsp</result>
	    <result name="login_redirect" type="redirect">/login.do</result>
	</global-results>
    </package>
    <package name="rootActionPackage" extends="defaultAction" namespace="">
	<action name="index" class="cn.edu.tsinghua.sthu.action.RedirectAction">
	    <result name="success">/index.jsp</result>
	</action>
	<action name="login" class="cn.edu.tsinghua.sthu.action.ShowLoginPageAction">
	    <result name="redirect" type="redirect">${url}</result>
	    <result name="success">/login.jsp</result>
	</action>
	<action name="checkUser" class="cn.edu.tsinghua.sthu.action.LoginAction">
	    <result name="success" type="redirect">${redirectURL}</result>
	</action>
	<action name="logout" class="cn.edu.tsinghua.sthu.action.LogoutAction">
	</action>
	<action name="updatePassword" class="cn.edu.tsinghua.sthu.action.UpdatePasswordAction">
	</action>
	<action name="mysthu" class="cn.edu.tsinghua.sthu.action.ShowHomeAction">
	    <result name="user_home">userhome.jsp</result>
	    <result name="admin_home">adminhome.jsp</result>
	</action>
    </package>
    <package name="testActionPackage" extends="defaultAction" namespace="/test">
	<action name="login" class="cn.edu.tsinghua.sthu.action.LoginAction">
	    <result name="success">welcome.jsp</result>
	</action>
	<action name="addUser" class="cn.edu.tsinghua.sthu.action.AddUserAction">
	</action>
	<action name="setAuth" class="cn.edu.tsinghua.sthu.action.SetUserAuthAction">
	</action>
	<action name="logout" class="cn.edu.tsinghua.sthu.action.LogoutAction">
	</action>
	<action name="page" class="cn.edu.tsinghua.sthu.action.TestPageAction">
	</action>
	<action name="testUEditor" class="cn.edu.tsinghua.sthu.action.TestUEditorAction">
	</action>
    </package>
    <package name="activityActionPackage" extends="defaultAction" namespace="/activity">
	<action name="applyClassroom" class="cn.edu.tsinghua.sthu.action.ShowApplyClassroomPageAction">
	    <result name="create">create_classroom_form.jsp</result>
	    <result name="modify">modify_classroom_form.jsp</result>
	</action>
	<action name="submitClassroomApply" class="cn.edu.tsinghua.sthu.action.SaveClassroomApplyAction">
	    <result name="create">create_classroom_form.jsp</result>
	</action>
	<action name="showApply" class="cn.edu.tsinghua.sthu.action.ShowApplyAction">
	    <result name="success">show_classroom_apply.jsp</result>
	</action>
    </package>
</struts>
